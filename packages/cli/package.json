{
  "name": "debug-bridge-cli",
  "version": "0.2.0",
  "description": "CLI for debug-bridge - WebSocket server for AI agent debugging",
  "author": "stevengonsalvez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stevengonsalvez/agent-bridge"
  },
  "keywords": ["debug", "bridge", "ai", "agent", "cli", "websocket", "automation"],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "debug-bridge": "./dist/bin/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/bin/cli.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "debug-bridge-types": "workspace:*",
    "commander": "^12.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.13",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
